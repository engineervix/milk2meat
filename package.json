{
  "name": "milk2meat",
  "version": "1.1.0",
  "description": "A tool to help one get into The Word of God",
  "author": "Victor Miti",
  "license": "BSD-3-Clause",
  "private": true,
  "scripts": {
    "build": "webpack --mode development --progress",
    "build:prod": "webpack --mode production",
    "commit": "git-cz",
    "css-fix": "npx stylelint milk2meat/static/css/ --fix",
    "dev": "webpack --mode development --progress --watch",
    "dev:reload": "webpack serve",
    "lint:format": "prettier --check '**/?(.)*.{md,css,scss,js,json,yaml,yml}'",
    "lint:js": "eslint --ext \".js\" --ignore-path .gitignore milk2meat/assets/js/",
    "lint:style": "stylelint \"milk2meat/assets/css/**/*.css\" --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:format",
    "release": "commit-and-tag-version",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@phosphor-icons/web": "^2.1.1",
    "easymde": "^2.20.0",
    "glightbox": "^3.3.1",
    "pdfjs-dist": "^4.10.38",
    "sweetalert2": "^11.17.2",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/eslint-parser": "^7.24.8",
    "@babel/preset-env": "^7.25.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "commit-and-tag-version": "^12.4.4",
    "commitizen": "^4.3.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "cssnano": "^7.0.6",
    "cz-conventional-changelog": "^3.3.0",
    "daisyui": "^5.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-webpack-plugin": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.1",
    "postcss": "^8.4.47",
    "postcss-custom-properties": "^14.0.1",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-webpack-plugin": "^5.0.1",
    "tailwindcss": "^3.4.17",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "browserslist": {
    "production": [
      ">5%",
      "last 2 versions",
      "not ie > 0",
      "not ie_mob > 0",
      "Firefox ESR"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 edge version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "**/static/**/*.*",
      "**/staticfiles/css/*.*"
    ]
  },
  "commit-and-tag-version": {
    "header": "# Changelog\n\nAll notable changes to this project will be documented here.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/), and this project attempts to adhere to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n",
    "types": [
      {
        "type": "feat",
        "section": "🚀 Features"
      },
      {
        "type": "fix",
        "section": "🐛 Bug Fixes"
      },
      {
        "type": "docs",
        "section": "📝 Docs",
        "hidden": false
      },
      {
        "type": "style",
        "section": "💄 Styling",
        "hidden": false
      },
      {
        "type": "refactor",
        "hidden": false,
        "section": "♻️ Code Refactoring"
      },
      {
        "type": "perf",
        "section": "⚡️ Performance Improvements",
        "hidden": false
      },
      {
        "type": "test",
        "section": "✅ Tests",
        "hidden": false
      },
      {
        "type": "build",
        "section": "⚙️ Build System",
        "hidden": false
      },
      {
        "type": "ci",
        "section": "👷 CI/CD",
        "hidden": false
      },
      {
        "type": "chore",
        "section": "🚧 Others",
        "hidden": true
      },
      {
        "type": "revert",
        "section": "⏪️ Reverts",
        "hidden": true
      }
    ],
    "scripts": {
      "prechangelog": "sed -e '1,6d' -i CHANGELOG.md",
      "postchangelog": "sed -e 's/###\\ \\[/##\\ \\[v/g' -i CHANGELOG.md && sed -re 's/##\\ \\[([0-9])/##\\ \\[v\\1/g' -i CHANGELOG.md"
    }
  },
  "engines": {
    "node": ">= 22 <23",
    "npm": ">= 10"
  }
}
